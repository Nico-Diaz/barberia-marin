---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Barbería Marin" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
        
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Montserrat:wght@400;700&display=swap" rel="stylesheet">

		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
    /* DEFINICIÓN DE COLORES */
	:root {
		--color-text-black: #121212;   /* Negro Fondo */
		--color-bg-beige: #d4af37;     /* Dorado */
        --color-white-muted: #e0e0e0;  /* Blanco Texto */
        
        --font-titles: 'Bebas Neue', sans-serif;
        --font-body: 'Montserrat', sans-serif;
	}

    /* ESTILOS BASE */
	html {
		font-family: var(--font-body);
		background: var(--color-text-black); /* ¡ESTO PINTA EL FONDO DE NEGRO! */
        color: var(--color-white-muted);
	}

	body {
        margin: 0;
        padding: 0;
        min-height: 100vh;
	}
    
    /* Reset básico */
    * { box-sizing: border-box; }
</style>