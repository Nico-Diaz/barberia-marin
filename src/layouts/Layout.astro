---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Barbería Marin - Reserva tu turno" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Montserrat:wght@400;700&display=swap" rel="stylesheet">

		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
    /* --- VARIABLES GLOBALES (AQUÍ ESTÁ LA MAGIA) --- */
	:root {
        /* Paleta de Colores */
		--color-text-black: #121212;   /* Fondo Oscuro (Casi negro) */
		--color-bg-beige: #d4af37;     /* Dorado / Beige Premium */
        --color-white-muted: #e0e0e0;  /* Blanco suave para textos */
		
        /* Fuentes */
        --font-titles: 'Bebas Neue', sans-serif;
        --font-body: 'Montserrat', sans-serif;
	}

    /* --- RESET BÁSICO --- */
	* {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

	html {
		font-family: var(--font-body);
		background: var(--color-text-black); /* Fondo negro global */
        color: var(--color-white-muted);     /* Texto blanco por defecto */
	}

	body {
        min-height: 100vh;
        width: 100%;
        overflow-x: hidden;
	}

    /* Estilos para Títulos */
    h1, h2, h3, h4 {
        font-family: var(--font-titles);
        color: var(--color-bg-beige); /* Títulos dorados */
        letter-spacing: 1px;
    }

    /* Estilos para inputs automáticos del navegador */
    input, select, textarea {
        font-family: var(--font-body);
    }
</style>