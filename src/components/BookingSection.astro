        background: var(--color-bg-beige) !important;
        color: var(--color-text-black) !important;
        border-color: var(--color-bg-beige) !important;
        font-weight: bold;
    }

    /* Días deshabilitados (Domingos) */
    :global(.flatpickr-day.flatpickr-disabled), :global(.flatpickr-day.flatpickr-disabled:hover) {
        color: rgba(255, 255, 255, 0.1) !important;
    }

    /* Flechas de navegación */
    :global(.flatpickr-prev-month svg), :global(.flatpickr-next-month svg) {
        fill: var(--color-bg-beige) !important;
    }
</style>