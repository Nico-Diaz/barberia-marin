---
interface Props {
    errorBackend?: string;
}
const { errorBackend } = Astro.props;
---

<div class="card-form">
    
    {errorBackend && (
        <div class="mensaje-alerta error">
            ⚠️ {errorBackend}
        </div>
    )}

    <div id="js-error" class="mensaje-alerta error" style="display: none;"></div>

    <form method="POST" class="booking-form">
        
        <div class="row-group">
            <div class="field-wrapper">
                <label>NOMBRE</label>
                <input type="text" name="nombre" placeholder="Tu nombre..." required class="input-app">
            </div>
            
            <div class="field-wrapper">
                <label>APELLIDO</label>
                <input type="text" name="apellido" placeholder="Tu apellido..." required class="input-app">
            </div>
        </div>
        
        <div class="field-wrapper full-width">
            <label>WHATSAPP (Opcional)</label>
            <input type="tel" name="telefono" placeholder="Ej: 11 1234 5678" class="input-app">
        </div>

        <div class="row-group">
            <div class="field-wrapper">
                <label>FECHA</label>
                <input type="date" name="fecha" id="input-fecha" required min={new Date().toISOString().split('T')[0]} class="input-app centered">
            </div>
            
            <div class="field-wrapper">
                <label>HORA</label>
                <select name="hora" id="select-hora" required disabled class="input-app centered">
                    <option value="" disabled selected>--:--</option>
                </select>
            </div>
        </div>

        <button type="submit" class="btn-app">CONFIRMAR TURNO</button>
    </form>
</div>

<script>
    const inputFecha = document.getElementById('input-fecha') as HTMLInputElement;
    const selectHora = document.getElementById('select-hora') as HTMLSelectElement;
    const errorDiv = document.getElementById('js-error');

    type HorarioConfig = { inicio: number; fin: number } | null;
    
    const horarios: Record<number, HorarioConfig> = {
        0: null,                       // Domingo
        1: { inicio: 10, fin: 19 },    // Lunes
        2: { inicio: 10, fin: 20 },    // Martes
        3: { inicio: 10, fin: 19 },    // Miércoles
        4: { inicio: 10, fin: 20 },    // Jueves
        5: { inicio: 10, fin: 19 },    // Viernes
        6: { inicio: 11, fin: 21 },    // Sábado
    };

    if (inputFecha && selectHora) {
        inputFecha.addEventListener('input', () => {
            if (errorDiv) errorDiv.style.display = 'none';
            selectHora.innerHTML = '<option value="" disabled selected>--:--</option>';
            selectHora.disabled = true;

            if (!inputFecha.value) return;

            const fecha = new Date(inputFecha.value + 'T00:00:00');
            const diaSemana = fecha.getDay();

            const configDia = horarios[diaSemana];

            if (configDia === null) {
                inputFecha.value = '';
                if (errorDiv) {
                    errorDiv.textContent = '⛔ Domingos cerrado.';
                    errorDiv.style.display = 'block';
                }
            } else {
                selectHora.disabled = false;
                for (let h = configDia.inicio; h <= configDia.fin; h++) {
                    const horaTexto = `${h}:00`;
                    const option = document.createElement('option');
                    option.value = horaTexto;
                    option.textContent = horaTexto;
                    selectHora.appendChild(option);
                }
            }
        });
    }
</script>

<style>
    /* TARJETA TIPO APP (Lo que te gustaba) */
    .card-form {
        background-color: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(242, 240, 230, 0.1);
        padding: 30px;
        border-radius: 16px;
        width: 100%;
        max-width: 450px;
        box-shadow: 0 20px 40px rgba(0,0,0,0.3);
    }

    .mensaje-alerta.error {
        background-color: #3b1215;
        color: #ff8a8a;
        border: 1px solid #63181d;
        padding: 10px;
        margin-bottom: 20px;
        border-radius: 8px;
        font-size: 0.9rem;
        text-align: center;
    }

    .row-group {
        display: flex;
        gap: 15px;
        margin-bottom: 20px;
    }

    .full-width {
        width: 100%;
        margin-bottom: 20px;
    }

    .field-wrapper {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 8px; /* Espacio entre Label e Input */
    }

    /* ETIQUETAS (LABELS) FUERA DEL INPUT */
    label {
        color: var(--color-bg-beige);
        font-size: 0.7rem;
        font-weight: bold;
        opacity: 0.6;
        letter-spacing: 1.5px;
        text-transform: uppercase;
        margin-left: 5px; /* Pequeña sangría para alinear */
    }

    /* INPUTS TIPO CAJA */
    .input-app {
        width: 100%;
        padding: 14px 16px;
        background-color: rgba(0, 0, 0, 0.3);
        border: 1px solid rgba(242, 240, 230, 0.15);
        color: var(--color-bg-beige);
        font-size: 0.95rem;
        border-radius: 10px;
        outline: none;
        transition: 0.2s ease-in-out;
        font-family: var(--font-body);
    }

    .input-app:focus {
        border-color: var(--color-bg-beige);
        background-color: rgba(0, 0, 0, 0.5);
        transform: translateY(-1px);
    }

    .input-app.centered {
        text-align: center;
    }

    /* --- ESTILO DE LOS PLACEHOLDERS --- */
    /* Aquí está el truco: hacemos que el texto de relleno se vea sutil y diseñado */
    .input-app::placeholder {
        color: rgba(242, 240, 230, 0.3); /* Color mucho más suave */
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    /* Ajustes específicos */
    input[type="date"] { color-scheme: dark; }
    select option { background-color: #222; color: #fff; }

    /* BOTÓN */
    .btn-app {
        width: 100%;
        padding: 18px;
        margin-top: 10px;
        background-color: var(--color-bg-beige);
        color: var(--color-text-black);
        border: none;
        border-radius: 50px;
        font-weight: 800;
        font-size: 1rem;
        letter-spacing: 2px;
        cursor: pointer;
        transition: transform 0.2s;
        text-transform: uppercase;
        box-shadow: 0 5px 15px rgba(242, 240, 230, 0.1);
    }

    .btn-app:hover {
        background-color: #fff;
        transform: scale(1.02);
    }

    @media (max-width: 480px) {
        .row-group { flex-direction: column; gap: 20px; }
    }
</style>