---
interface Props {
    errorBackend?: string;
}
const { errorBackend } = Astro.props;
---

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/themes/dark.css">

<div class="card-form">
    
    {errorBackend && (
        <div class="mensaje-alerta error">
            ⚠️ {errorBackend}
        </div>
    )}

    <div id="js-error" class="mensaje-alerta error" style="display: none;"></div>

    <form method="POST" class="booking-form">
        
        <div class="row-group">
            <div class="field-wrapper">
                <label>NOMBRE</label>
                <input type="text" name="nombre" placeholder="Tu nombre..." required class="input-app">
            </div>
            
            <div class="field-wrapper">
                <label>APELLIDO</label>
                <input type="text" name="apellido" placeholder="Tu apellido..." required class="input-app">
            </div>
        </div>
        
        <div class="field-wrapper full-width">
            <label>WHATSAPP (Opcional)</label>
            <input type="tel" name="telefono" placeholder="Ej: 11 1234 5678" class="input-app">
        </div>

        <div class="row-group">
            <div class="field-wrapper">
                <label>FECHA</label>
                <input type="text" name="fecha" id="input-fecha" required placeholder="Selecciona día..." class="input-app centered" readonly>
            </div>
            
            <div class="field-wrapper">
                <label>HORA</label>
                <select name="hora" id="select-hora" required disabled class="input-app centered">
                    <option value="" disabled selected>--:--</option>
                </select>
            </div>
        </div>

        <button type="submit" class="btn-app">CONFIRMAR TURNO</button>
    </form>
</div>

<script is:inline src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script is:inline src="https://npmcdn.com/flatpickr/dist/l10n/es.js"></script>

<script is:inline>
    // Configuración de Horarios (Igual que antes)
    const horarios = {
        0: null,                       // Domingo
        1: { inicio: 10, fin: 19 },    // Lunes
        2: { inicio: 10, fin: 20 },    // Martes
        3: { inicio: 10, fin: 19 },    // Miércoles
        4: { inicio: 10, fin: 20 },    // Jueves
        5: { inicio: 10, fin: 19 },    // Viernes
        6: { inicio: 11, fin: 21 },    // Sábado
    };

    document.addEventListener('DOMContentLoaded', function() {
        const selectHora = document.getElementById('select-hora');
        const errorDiv = document.getElementById('js-error');

        // INICIALIZAMOS FLATPICKR
        flatpickr("#input-fecha", {
            locale: "es",           // Idioma español
            minDate: "today",       // No permitir pasado
            dateFormat: "Y-m-d",    // Formato para la base de datos
            disableMobile: "true",  // Forzar nuestro diseño en celular (no usar el nativo)
            
            // FUNCIÓN MÁGICA: Deshabilitar Domingos (0) directamente en el calendario
            disable: [
                function(date) {
                    // return true to disable
                    return (date.getDay() === 0);
                }
            ],

            // CUANDO EL USUARIO ELIGE UNA FECHA
            onChange: function(selectedDates, dateStr, instance) {
                if (errorDiv) errorDiv.style.display = 'none';
                selectHora.innerHTML = '<option value="" disabled selected>--:--</option>';
                selectHora.disabled = true;

                if (selectedDates.length === 0) return;

                const fechaElegida = selectedDates[0];
                const diaSemana = fechaElegida.getDay();
                const configDia = horarios[diaSemana];

                // Lógica de "HOY"
                const ahora = new Date();
                // Verificamos si la fecha elegida es el mismo día que hoy
                const esHoy = fechaElegida.toDateString() === ahora.toDateString();
                const horaActual = ahora.getHours();

                if (configDia) {
                    selectHora.disabled = false;
                    
                    for (let h = configDia.inicio; h <= configDia.fin; h++) {
                        // Si es hoy y la hora ya pasó, la saltamos
                        if (esHoy && h <= horaActual) {
                            continue;
                        }

                        const horaTexto = `${h}:00`;
                        const option = document.createElement('option');
                        option.value = horaTexto;
                        option.textContent = horaTexto;
                        selectHora.appendChild(option);
                    }

                    // Si no quedaron horas
                    if (selectHora.options.length === 1) {
                        const option = document.createElement('option');
                        option.text = "Sin cupo hoy";
                        option.disabled = true;
                        selectHora.appendChild(option);
                    }
                }
            }
        });
    });
</script>

