        color: #ff8a8a;
        padding: 10px;
        border-radius: 6px;
        font-size: 0.9rem;
        text-align: center;
        margin-bottom: 20px;
        border: 1px solid #63181d;
    }

    .field-wrapper {
        margin-bottom: 20px;
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    label {
        color: var(--color-bg-beige);
        font-size: 0.7rem;
        font-weight: bold;
        opacity: 0.6;
        letter-spacing: 1.5px;
        text-transform: uppercase;
        margin-left: 5px;
    }

    .input-app {
        width: 100%;
        padding: 14px 16px;
