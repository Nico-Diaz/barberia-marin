---
import Layout from '../layouts/Layout.astro';
import { supabase } from '../lib/supabase';

let errorMsg = "";

// LÓGICA DE LOGIN
if (Astro.request.method === 'POST') {
    const formData = await Astro.request.formData();
    const email = formData.get('email') as string;
    const password = formData.get('password') as string;

    // 1. Preguntamos a Supabase si el usuario es real
    const { data, error } = await supabase.auth.signInWithPassword({
        email,
        password,
    });

    if (error) {
        errorMsg = "Email o contraseña incorrectos.";
    } else {
        // 2. ÉXITO: Supabase nos da tokens (access_token y refresh_token)
        const { access_token, refresh_token } = data.session;

        // 3. Guardamos esos tokens en cookies seguras (HttpOnly)
        // Esto es lo que "autoriza" al usuario en las siguientes páginas
        Astro.cookies.set("sb-access-token", access_token, {
            path: "/",
            httpOnly: true, // No accesible por JS (seguridad)
            secure: true,   // Solo HTTPS
            sameSite: "lax",
            maxAge: 60 * 60 * 24 * 7 // 1 semana
        });

        Astro.cookies.set("sb-refresh-token", refresh_token, {
            path: "/",
            httpOnly: true,
            secure: true,
            sameSite: "lax",
            maxAge: 60 * 60 * 24 * 7
        });

        // 4. Redirigimos al panel
        return Astro.redirect("/admin");
    }
}
---

<Layout title="Acceso Admin | Barbería Marin">
    <main class="login-wrapper">
        <div class="card-form">
            <div class="brand-header">
                <h2>ADMINISTRACIÓN</h2>
                <p>Acceso exclusivo</p>
            </div>

            {errorMsg && (
                <div class="mensaje-error">
                    ⛔ {errorMsg}
                </div>
            )}

            <form method="POST">
                <div class="field-wrapper">
                    <label>EMAIL</label>
                    <input type="email" name="email" placeholder="admin@barberia.com" required class="input-app">
                </div>

                <div class="field-wrapper">
                    <label>CONTRASEÑA</label>
                    <input type="password" name="password" placeholder="••••••••" required class="input-app">
                </div>

                <button type="submit" class="btn-app">INGRESAR</button>
            </form>

            <a href="/" class="back-link">← Volver al inicio</a>
        </div>
    </main>
</Layout>

<style>
