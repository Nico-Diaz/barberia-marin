import Layout from '../layouts/Layout.astro';
import BookingSection from '../components/BookingSection.astro';
import { supabase } from '../lib/supabase';

let mensajeError = "";

if (Astro.request.method === 'POST') {
  const formData = await Astro.request.formData();
  const nombre = formData.get('nombre') as string;
  const apellido = formData.get('apellido') as string;
  const fecha = formData.get('fecha') as string;
  const hora = formData.get('hora') as string;
  const telefono = formData.get('telefono') as string;

  const diaSemana = new Date(fecha + 'T00:00:00').getDay();
  const horaNum = parseInt(hora.split(':')[0]);

  try {
    let esHorarioValido = false;

    // --- 1. REGLA DE TIEMPO (NUEVO) ---
    // Creamos objetos de fecha para comparar
    // "Ahora" en Argentina
    const ahora = new Date(); 
    
    // Fecha del turno (Agregamos la hora elegida)
    const fechaTurno = new Date(`${fecha}T${hora}:00`);

    // Si la fecha del turno es ANTERIOR a ahora, error.
    // (Le damos 1 minuto de margen por si acaso)
    if (fechaTurno < ahora) {
         // Peque침o ajuste: Si es el mismo d칤a y la hora ya pas칩
         // Solo validamos esto si la fecha es HOY.
         const hoyString = ahora.toISOString().split('T')[0];
         if (fecha === hoyString) {
             const horaActual = ahora.getHours();
             if (horaNum <= horaActual) {
                 throw { message: "No puedes reservar en un horario que ya pas칩." };
             }
         }
    }

    // --- 2. REGLAS DE D칈AS Y HORARIOS (Igual que antes) ---
    if (diaSemana === 0) {
        mensajeError = "Los domingos permanecemos cerrados.";
    } 
    else if (diaSemana === 1 || diaSemana === 3 || diaSemana === 5) { // L-M-V
        if (horaNum >= 10 && horaNum <= 19) esHorarioValido = true;
        else mensajeError = "Los Lun, Mie y Vie abrimos de 10:00 a 19:00.";
    } 
    else if (diaSemana === 2 || diaSemana === 4) { // M-J
        if (horaNum >= 10 && horaNum <= 20) esHorarioValido = true;
        else mensajeError = "Los Mar y Jue abrimos de 10:00 a 20:00.";
    } 
    else if (diaSemana === 6) { // SAB
        if (horaNum >= 11 && horaNum <= 21) esHorarioValido = true;
        else mensajeError = "Los S치bados abrimos de 11:00 a 21:00.";
    }

    if (esHorarioValido && !mensajeError) {
        // Consultar Supabase
        const { data: turnosExistentes, error: errorSelect } = await supabase
            .from('turnos')
            .select('*')
            .eq('fecha', fecha)
            .eq('hora', hora);

        if (errorSelect) throw errorSelect;

        if (turnosExistentes && turnosExistentes.length > 0) {
            mensajeError = `El horario de las ${hora} ya est치 ocupado.`;
        } else {
            const { error: errorInsert } = await supabase
                .from('turnos')
                .insert([{ nombre, apellido, fecha, hora, telefono }]);

            if (errorInsert) throw errorInsert;
            
            return Astro.redirect(`/exito?nombre=${nombre}&fecha=${fecha}&hora=${hora}`);
        }
    }

  } catch (error: any) {
    console.error("Error:", error);
    // Si el error tiene un mensaje personalizado (como el de la hora), lo usamos
    mensajeError = error.message || "Error al procesar el turno.";
  }
}
