import Layout from '../layouts/Layout.astro';
import { supabase } from '../lib/supabase';

export const prerender = false;
Astro.response.headers.set('Cache-Control', 'no-cache, no-store, must-revalidate');

// --- SEGURIDAD ---
const accessToken = Astro.cookies.get("sb-access-token");
const refreshToken = Astro.cookies.get("sb-refresh-token");

if (!accessToken || !refreshToken) {
    return Astro.redirect('/login');
}

const { data: { user }, error: authError } = await supabase.auth.getUser(accessToken.value);

if (authError || !user) {
    Astro.cookies.delete("sb-access-token", { path: "/" });
    Astro.cookies.delete("sb-refresh-token", { path: "/" });
    return Astro.redirect('/login');
}

// --- LÓGICA DE ACCIONES (POST) ---
let mensajeExito = "";

if (Astro.request.method === 'POST') {
    const formData = await Astro.request.formData();
    const action = formData.get('action');

    // 1. CERRAR SESIÓN
    if (action === 'logout') {
        await supabase.auth.signOut();
        Astro.cookies.delete("sb-access-token", { path: "/" });
        Astro.cookies.delete("sb-refresh-token", { path: "/" });
        return Astro.redirect('/login');
    }

    // 2. ELIMINAR TURNO
    const idToDelete = formData.get('id');
    if (idToDelete && action === 'delete') {
        await supabase.from('turnos').delete().eq('id', idToDelete);
    }

    // 3. CAMBIAR HORARIO
    const idToUpdate = formData.get('id');
    const nuevaHora = formData.get('nueva_hora');
    
    if (action === 'update_hora' && idToUpdate && nuevaHora) {
        const { error } = await supabase
            .from('turnos')
            .update({ hora: nuevaHora })
            .eq('id', idToUpdate);
            
        if (!error) {
            mensajeExito = "Horario actualizado correctamente.";
        }
    }
}

// --- CARGAR DATOS ---
const { data: turnos } = await supabase
    .from('turnos')
    .select('*')
    .order('fecha', { ascending: true })
    .order('hora', { ascending: true });

const listaTurnos = turnos || [];

const hoy = new Date().toLocaleDateString('es-AR', { 
    year: 'numeric', month: '2-digit', day: '2-digit' 
}).split('/').reverse().join('-');

// --- GENERAR LISTA DE HORARIOS (Cada 30 min) ---
const horariosOpciones: string[] = [];
for (let h = 10; h <= 21; h++) {
    horariosOpciones.push(`${h}:00`);
    if (h < 21) horariosOpciones.push(`${h}:30`);
}
---

<Layout title="Admin | Barbería Ezequiel Marin">
    <div class="admin-wrapper">
        
        <header class="admin-header">
            <div class="titulo">
                <h1>BARBERÍA EZEQUIEL MARIN</h1>
                <p>Panel de Administración</p>
            </div>
            
            <form method="POST">
                <input type="hidden" name="action" value="logout">
                <button type="submit" class="btn-logout">
                    SALIR
                </button>
            </form>
        </header>

        {mensajeExito && (
            <div class="toast-success">{mensajeExito}</div>
        )}

        <div class="table-container">
            {listaTurnos.length === 0 ? (
                <div class="empty-state">
                    <p>No hay turnos registrados todavía.</p>
                </div>
            ) : (
                <table class="responsive-table">
                    <thead>
                        <tr>
                            <th>FECHA</th>
                            <th>HORARIO</th>
                            <th>SERVICIO</th> <th>CLIENTE</th>
                            <th>CONTACTO</th>
                            <th>ACCIÓN</th>
                        </tr>
                    </thead>
                    <tbody>
                        {listaTurnos.map((turno) => (
                            <tr class={turno.fecha === hoy ? "es-hoy" : ""}>
                                <td data-label="FECHA">
                                    <div class="fecha-celda">
                                        {turno.fecha.split('-').reverse().join('/')}
                                        {turno.fecha === hoy && <span class="badge-hoy">HOY</span>}
                                    </div>
                                </td>
                                
                                <td data-label="HORARIO">
                                    <form method="POST" class="form-cambio-hora">
                                        <input type="hidden" name="action" value="update_hora">
                                        <input type="hidden" name="id" value={turno.id}>
                                        
                                        <select name="nueva_hora" onchange="this.form.submit()" class="select-hora">
                                            {horariosOpciones.map((h) => (
                                                <option value={h} selected={h === turno.hora}>
                                                    {h} hs
                                                </option>
                                            ))}
                                        </select>
                                    </form>
                                </td>

                                <td data-label="SERVICIO">
                                    <span class="servicio-badge">
                                        {turno.servicio || 'Sin especificar'}
                                    </span>
                                </td>

                                <td data-label="CLIENTE" class="cliente-text">{turno.nombre} {turno.apellido}</td>
                                <td data-label="CONTACTO">
                                    {turno.telefono ? (
                                        <a href={`https://wa.me/${turno.telefono}`} target="_blank" class="whatsapp-btn">
                                            WhatsApp
                                        </a>
                                    ) : <span class="no-data">-</span>}
                                </td>
                                <td class="accion-td">
                                    <form method="POST" id={`form-borrar-${turno.id}`}>
                                        <input type="hidden" name="action" value="delete">
                                        <input type="hidden" name="id" value={turno.id} />
                                        <button 
                                            type="button" 
                                            class="btn-delete accion-borrar"
                                            data-id={turno.id}
                                            data-nombre={`${turno.nombre} ${turno.apellido}`}
                                        >
                                            Eliminar
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        ))}
                    </tbody>
                </table>
            )}
        </div>
    </div>
</Layout>

<script>
    import Swal from 'sweetalert2';

    document.addEventListener('click', (e) => {
        const target = e.target as HTMLElement;
        const boton = target.closest('.accion-borrar');
        
        if (boton) {
            const id = boton.getAttribute('data-id');
            const nombre = boton.getAttribute('data-nombre');
            const form = document.getElementById(`form-borrar-${id}`) as HTMLFormElement;

            if (form) {
                Swal.fire({
                    title: '¿Eliminar turno?',
                    text: `Vas a borrar el turno de ${nombre}.`,
                    icon: 'warning',
                    background: '#1a1a1a',
                    color: '#fff',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#444',
                    confirmButtonText: 'Sí, borrar',
                    cancelButtonText: 'Cancelar'
                }).then((result) => {
                    if (result.isConfirmed) {
                        form.submit();
                    }
                });
            }
        }
    });

    const toast = document.querySelector('.toast-success');
    if (toast) {
        setTimeout(() => {
            (toast as HTMLElement).style.opacity = '0';
            setTimeout(() => toast.remove(), 500);
        }, 3000);
    }
</script>

